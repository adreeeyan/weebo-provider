{
  "name": "weebo-provider",
  "version": "0.0.1",
  "description": "weebo-provider",
  "license": "MIT",
  "repository": "https://github.com/adrianonrails/weebo-provider/",
  "author": {
    "name": "Adrian Dela Piedra",
    "email": "adrian.onrails@gmail.com",
    "url": "https://github.com/adrianonrails"
  },
  "keywords": [
    "baruch",
    "weebo",
    "lightnovel",
    "manga",
    "anime",
    "crawler",
    "node"
  ],
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "clean": "rimraf lib && rimraf coverage",
    "format": "prettier --write \"{src,__tests__}/**/*.ts\"",
    "lint": "tslint --force --format verbose \"src/**/*.ts\"",
    "prepublishOnly": "npm run build",
    "prebuild": "npm run clean && npm run format && npm run lint && echo Using TypeScript && tsc --version",
    "build": "tsc --pretty && browserify lib/index.js -do lib/dist/app.js -s WeeboProvider",
    "test": "jest",
    "coverage": "jest --coverage",
    "start": "tsc src/index.ts",
    "watch": "npm run build -- --watch",
    "watch:test": "jest --watch"
  },
  "dependencies": {
    "@types/cheerio": "^0.22.9",
    "@types/es6-promise": "^3.3.0",
    "@types/lodash": "^4.14.108",
    "cheerio-without-node-native": "^1.0.0-rc.2",
    "es6-promise": "^4.2.5",
    "isomorphic-fetch": "^2.2.1",
    "lodash": "^4.17.10"
  },
  "devDependencies": {
    "@types/jest": "^22.0.1",
    "@types/node": "^8.0.0",
    "browserify": "^16.2.3",
    "coveralls": "^2.0.0",
    "jest": "^22.0.4",
    "prettier": "^1.5.2",
    "rimraf": "^2.0.0",
    "ts-jest": "^22.0.1",
    "ts-node": "^3.2.0",
    "tslint": "^5.0.0",
    "tslint-config-prettier": "^1.1.0",
    "typescript": "^2.3.0"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "jest": {
    "transform": {
      ".(ts)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "testEnvironment": "node"
  }
}
